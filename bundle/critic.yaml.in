# -*- YAML -*-
# This is a Spack Environment file.
#
# It describes a set of packages to be installed, along with
# configuration settings.
spack:
  definitions:
  - compiler: [${MAIN_COMPILER_SPEC}]
  - root:
    - matrix:
      - - root
      - ['+opengl+x', '~opengl~x']
  specs:
  - matrix:
    -
      - critic
      - art-root-io
      - gallery
      - canvas-root-io
    - - $^root
  - art
  - canvas
  - messagefacility
  - fhicl-cpp
  - cetlib
  - hep-concurrency
  - cetlib-except
  - cetmodules
  view: false
${EXTRA_ENV_CONFIG}
  include:
  - 'packages.yaml'
