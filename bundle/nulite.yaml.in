# -*- YAML -*-
# This is a Spack Environment file.
#
# It describes a set of packages to be installed, along with
# configuration settings.
spack:
  definitions:
  - compiler: [${MAIN_COMPILER_SPEC}]
  - geant4:
    - matrix:
      - - builtin.geant4 ~threads ~vecgeom
      - ['+qt', '~qt']
  - root:
    - matrix:
      - - root
      - ['+opengl+x', '~opengl~x']
  specs:
  - matrix:
    -
      - artdaq-core
      - art-root-io
      - gallery
      - nug4
      - nugen
      - nurandom
      - nusimdata
      - nutools
    - - $^root
  - gcc
  - cry
  - $geant4
  - ifdh-art
  view: false
${EXTRA_ENV_CONFIG}
  include:
  - 'packages.yaml'
