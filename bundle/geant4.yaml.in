# -*- YAML -*-
# This is a Spack Environment file.
#
# It describes a set of packages to be installed, along with
# configuration settings.
spack:
  definitions:
  - compiler: [${MAIN_COMPILER_SPEC}]
  specs:
    - matrix:
      - [builtin.geant4]
      - ['~vecgeom', '+vecgeom']
      - ['~threads', '+threads']
      - ['~qt', '+qt']
      exclude:
        - geant4 +vecgeom +qt
        - geant4 +threads +qt
  view: false
${EXTRA_ENV_CONFIG}
  include:
  - 'packages.yaml'
